{% extends 'base.html.twig' %}
{% block body %}

<div class="container">
   <p>* obligatoire</p>
       <h1 class="text-center">Form for add plateforme in the exchanges category</h1>
       
      <div class="row">
       <div style="padding-top:1rem;" class="col-md-7">
           <form  action="ajout" method="post">
           {{ form_start(form) }}
           <div class="form-group">{{ form_row(form.nom, {'attr':{'class':'form-control'}}) }}</div>
           <div class="form-group">{{ form_row(form.taille, {'attr':{'class':'form-control'}}) }}</div>
           <div class="form-group">{{ form_row(form.prix, {'attr':{'class':'form-control'}}) }}</div>
           <div class="form-group">{{ form_row(form.imageFile, {'attr':{'class':'form-control'}}) }}</div>
           	<div class="form-group">
				<input type="submit" class="btn btn-primary btn-lg" name="submit" value="Envoyer" />
			</div>
          {{ form_end(form) }}
           </form>
       </div>

{{dump(form)}}
   </div>
</div>

        {% endblock %}