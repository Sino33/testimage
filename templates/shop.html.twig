{% extends 'base.html.twig' %}

{% block title %}Shop{% endblock %}

{% block body %}

 <div class="container-fluid">
   <div class="row">

         
          {% for article in articles %}
          {# {{dump(article.image)}}")}} #}
        <div class="col-md-4"> 
          <div class="card-deck"> 
            <div class="card">
              <div class="card-body"> 
                <h5 class="card-title">{{article.nom}}</h5>
               <img class="card-img-top" src="{{ asset('build/static/total.png') }}" alt="Card image cap">
                </div>
                <div class="card-footer">
                  <small class="text-muted">Last updated 3 mins ago</small>
                  <a href="{{ path('achat',{ 'id':article.id }) }}"><button class="btn btn-warning">buy</button></a>
                </div>
              </div>
            </div>
          </div>
            
            {% endfor %}
        

    </div>
</div> 



{% endblock %}